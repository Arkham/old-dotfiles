!------------------!
!       XFT        !
!------------------!
Xft.dpi: 85
Xft*rgba: rgb
Xft*antialias: true
Xft*hinting: true
Xft*hintstyle: true

!------------------!
!      EMACS       !
!------------------!
Emacs.FontBackend: xft
Emacs.font: Bitstream Vera Sans Mono-10

!------------------!
!      URXVT       !
!------------------!

!--[term name]--!
URxvt*termName: rxvt-unicode
 
!--[font]--!
URxvt.font: xft:Terminus:size=10:antialias=true
URxvt.boldFont: xft:Terminus:style=Bold:size=10:antialias=true

!--[scrolling]--!
URxvt*scrollBar: false
URxvt*saveLines: 10000
URxvt*internalBorder: 0
 
!--[extension]--!
URxvt*perl-ext-common: default,selection,matcher
URxvt*urlLauncher: /usr/bin/firefox
URxvt*matcher.button: 1

!--[trans and fg/bg]--!
URxvt*fadeColor: black
URxvt*transparent: false
URxvt*shading: 80
URxvt*depth: 24
URxvt*borderless: 1

!--[cursor]--!
URxvt*cursorBlink: false
URxvt*cursorColor: #F0F0F0

